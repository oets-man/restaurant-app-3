{
	"env": {
		"browser": true,
		"es2021": true
	},
	"ignorePatterns": [
		"/dist/*.js",
		"karma.conf.js",
		"webpack*.js",
		"/specs/*.js",
		"/e2e/*.js",
		"sharp.js"
	],
	"extends": "eslint:recommended",
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-tabs": 0
	}
}
